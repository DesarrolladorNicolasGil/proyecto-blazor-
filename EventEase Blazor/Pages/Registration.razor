@page "/register"

@using EventEase.Models
@using System.ComponentModel.DataAnnotations
@* [5 pts] Implementación: Formulario de registro con validación (usando DataAnnotationsValidator) *@

<h3>Registro de Usuario</h3>

<EditForm Model="@User" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="username">Nombre de Usuario:</label>
        <InputText id="username" class="form-control" @bind-Value="User.Username" />
        <ValidationMessage For="@(() => User.Username)" />
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <InputText id="email" class="form-control" @bind-Value="User.Email" />
        <ValidationMessage For="@(() => User.Email)" />
    </div>

    <div class="form-group">
        <label for="password">Contraseña:</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="User.Password" />
        <ValidationMessage For="@(() => User.Password)" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrarse</button>
</EditForm>

@if (RegistrationSuccessful)
{
    <div class="alert alert-success mt-3">
        ¡Registro exitoso! Bienvenido, @User.Username.
    </div>
}

@code {
    private UserModel User = new UserModel();
    private bool RegistrationSuccessful = false;

    private void HandleValidSubmit()
    {
        // Lógica para enviar los datos del usuario al servicio/API
        Console.WriteLine($"Registro de usuario: {User.Username} / {User.Email}");
        RegistrationSuccessful = true;
    }
}